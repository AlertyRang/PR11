        <Button x:Name="Comf" Content="Потдвердить" Grid.Column="2" Grid.Row="7" FontSize="14" Click="Comf_Click"/>
        <Button x:Name="Can" Content="Отмена" Grid.Column="4" Grid.Row="7" FontSize="14" Click="Can_Click"/>
        <Label IsEnabled="False" x:Name="L_Six" Content="-" Background="Gray" Grid.Row="5" FontSize="11" Grid.Column="4"/>
        <TextBox IsEnabled="False" x:Name="TB_Six"  Grid.Row="5" FontSize="11" Grid.Column="5"/>
    </Grid>
</Window>
